<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">FootballGround</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= footballGround.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"></h4>
                    <h4><a><%= footballGround.name %></a></h4>
                    <p><%= footballGround.description %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<h1><%= footballGround.name %></h1>


<p>
    <a class="btn btn-success" href="/footballGrounds/<%= footballGround._id %>/comments/new">Add Comment</a>
</p>

<% footballGround.comments.forEach(function(comment){ %>
    <p>
        <strong><%= comment.author %></strong> - <%= comment.text %>
    </p>
<% }); %>

<% include ../partials/footer %>