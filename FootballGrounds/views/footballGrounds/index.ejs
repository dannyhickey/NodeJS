<% include ../partials/header %>
<div class="container">
      <header class="jumbotron">
            <h1>This is the Football Grounds Page</h1>
            <div class="container">
                  <p>View the football grounds from the Premier League</p>
                  <p>
                        <a class="btn btn-primary btn-large" href="/footballGrounds/new">Add New Statium</a>    
                  </p>
            </div>
      </header>
      
      <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% footballGrounds.forEach(function(grounds){ %>
                  <div class="col-md-3 col-sm-6">
                        <div class="thumbnail">
                              <img src="<%= grounds.image %>">
                              <div class="caption">
                                    <h4><%= grounds.name %></h4> 
                              </div>
                              <p>
                                    <a href="/footballGrounds/<%= grounds._id %>" class="btn btn-primary">More Info</a>
                              </p>
                        </div>
                  </div>
            <% }); %>
      </div>
</div>
                                    
<% include ../partials/footer %>